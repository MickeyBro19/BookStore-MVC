@model Product


<h1>Delete Product</h1>
<hr />

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Delete" method="post">
            <input asp-for="Id" hidden/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-3">
                <label asp-for="Title" class="control-label p-1"></label>
                <input asp-for="Title" disabled class="form-control" />
            </div>
            <div class="form-group p-3">
                <label asp-for="Description" class="control-label p-1"></label>
                <input asp-for="Description" disabled class="form-control" />
            </div>
            <div class="form-group p-3">
                <label asp-for="ISBN" class="control-label p-1"></label>
                <input asp-for="ISBN" disabled class="form-control" />
            </div>
            <div class="form-group p-3">
                <label asp-for="Author" class="control-label p-1"></label>
                <input asp-for="Author" disabled class="form-control" />
            </div>
            <div class="form-group p-3">
                <label asp-for="ListPrice" class="control-label p-1"></label>
                <input asp-for="ListPrice" disabled class="form-control" />
            </div>
            <div class="form-group p-3">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


