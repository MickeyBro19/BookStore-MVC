@model List<Product>
<div class="container">
    <div class=" row pt-4 pd-3">
        <div class="col-6">
            <h3>Product List</h3>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
                
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
            
        <th>Title</th>
        <th>Description</th>
        <th>ISBN</th>
        <th>Author</th>
        <th>Price</th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
               
                <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Author</td>
                    <td>@obj.ListPrice</td>

                <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pen"></i></a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
        
    </tbody>
</table>



</div>