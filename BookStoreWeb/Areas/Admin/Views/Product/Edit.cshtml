@model Product


<h1>Edit Product</h1>
<hr />

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-3">
                <label asp-for="Title" class="control-label p-1"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Description" class="control-label p-1"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="ISBN" class="control-label p-1"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Author" class="control-label p-1"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="ListPrice" class="control-label p-1"></label>
                <input asp-for="ListPrice" class="form-control" />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
